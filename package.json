{
  "name": "nt-composer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "source": true,
  "bin": {
    "nt-preview": "bin/nt-preview.js",
    "nt-compile": "bin/nt-compile.js"
  },
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "clean:compile": "rm -f ./dist/compile*.js",
    "clean:previewer": "rm -rf ./dist/client && rm -f ./dist/server*.js",
    "preview": "node ./bin/nt-preview.js",
    "compile": "node ./bin/nt-compile.js",
    "deploy": "yarn clean && yarn deploy:previewer && yarn deploy:compiler",
    "deploy:previewer": "yarn clean:previewer && npx parcel build --no-content-hash -t node -d ./dist -o server.js ./preview/server.js && npx parcel build --no-content-hash -t browser -d ./dist/client ./preview/index.html",
    "deploy:compiler": "yarn clean:compile && npx parcel build --no-content-hash -t node -d ./dist -o compile.js ./compile/index.js"
  },
  "author": "Teaching.com",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "SuperCanvas": "https://github.com/NickBeeuwsaert/SuperCanvas",
    "babel-preset-env": "^1.7.0",
    "bezier-js": "^2.6.1",
    "chokidar": "^3.4.0",
    "commander": "^5.1.0",
    "compress-images": "^1.7.8",
    "concurrently": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^9.0.0",
    "get-mp3-duration": "^1.0.0",
    "imagemin": "^7.0.1",
    "imagemin-jpeg-recompress": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "node-lame": "^1.2.2",
    "nt-animator": "https://github.com/teachingcom/nt-animator",
    "nt-track": "https://github.com/teachingcom/nt-track",
    "object-hash": "^2.0.3",
    "omgsvg": "https://github.com/deanm/omgsvg",
    "parcel-bundler": "^1.12.4",
    "pngquant": "^3.0.0",
    "shelljs": "^0.8.4",
    "simple-websocket": "^9.0.0",
    "spritesmith": "^3.4.0",
    "stats.js": "^0.17.0",
    "xml2js": "^0.4.23",
    "express": "^4.17.1",
    "http-server": "^0.12.3",
    "nodemon": "^2.0.3",
    "pixi-particles": "^4.2.0",
    "pixi.js": "^5.2.3",
    "popmotion": "^8.7.1"
  }
}
